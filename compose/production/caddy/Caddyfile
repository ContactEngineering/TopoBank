#www.{$DOMAIN_NAME} {
#    redir https://{topobank.$DOMAIN_NAME}
#}

# enable this for test with local certificates
{
	local_certs
}


{$DOMAIN_NAME} {
    reverse_proxy django:5000 {
        header_up Host {http.request.host}
        header_up X-Real-IP {http.request.remote}
        header_up X-Forwarded-Proto {http.request.scheme}
        except /media
        timeout 300s
    }
    log
    errors stdout
    encode gzip
}
